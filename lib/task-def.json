{
    "family": "sample-fargate", 
    "networkMode": "awsvpc", 
    "containerDefinitions": [
        {
            "name": "fargate-container", 
            "image": "657781215424.dkr.ecr.us-east-1.amazonaws.com/conjure/watched-1:latest", 
            "portMappings": [
                {
                    "containerPort": "3000",
                    "protocol": "tcp"
                },
                {
                    "containerPort": "80",
                    "protocol": "tcp"
                }
            ],
            "workingDirectory": "/var/conjure/code/",
            "command": [
                "node server.js"
            ],
            "essential": true,
            "memory": 512,
            "cpu": 256
        }
    ], 
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "executionRoleArn": "arn:aws:iam::657781215424:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::657781215424:role/ecsTaskExecutionRole",
    "cpu": "256", 
    "memory": "512"
}
